{% set ipv4          = salt['config.get']('fqdn_ip4') -%}
{% set minions       = salt['roles.dict']('rabbitmq-server') -%}
{% set nodename      = salt['config.get']('nodename') -%}
{% set subscriptions = salt['cmd.run']('ls -1d /etc/sensu/conf.d/checks-*.json'
                                  + ' | sed -e "s#.*/checks-#\\"#"'
                                  + '       -e "s#\.json#\\"#"'
                                      ).split('\n') -%}
{
  "rabbitmq"        : {
    "host"          :  "{{ minions['rabbitmq-server'][0]|default('localhost') }}",
    "port"          :   5672,
    "user"          :  "sensu",
    "password"      :  "mypass",
    "vhost"         : "/sensu"
  },
  "client"          : {
    "name"          :  "{{ nodename }}",
    "address"       :  "{{ ipv4[0] }}",
    "subscriptions" : [{{ subscriptions|join(',') }}]
  }
}
