{% set roles = [] -%}
{% do  roles.append('hadoop-hdfs-namenode') -%}
{% do  roles.append('hbase-master') -%}
{% do  roles.append('zookeeper-server') -%}
{% set minions = salt['roles.dict'](roles) -%}
