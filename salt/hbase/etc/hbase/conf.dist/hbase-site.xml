<configuration>
  {% if minions['hadoop-hdfs-namenode'] -%}
  <property>
    <name>hbase.cluster.distributed</name>
    <value>true</value>
  </property>
  <property>
    <name>hbase.rootdir</name>
    <value>hdfs://{{ minions['hadoop-hdfs-namenode'][0] }}:8020/hbase</value>
  </property>
  {% else -%}
  <property>
    <name>hbase.cluster.distributed</name>
    <value>false</value>
  </property>
  <property>
    <name>hbase.rootdir</name>
    <value>file:///var/lib/hbase</value>
  </property>
  <property>
    <name>hbase.zookeeper.property.dataDir</name>
    <value>/var/lib/zookeeper</value>
  </property>
  {% endif -%}
  <property>
    <name>hbase.snapshot.enabled</name>
    <value>true</value>
  </property>
  <property>
    <name>hbase.zookeeper.quorum</name>
    {% if     minions['zookeeper-server'] -%}
    <value>{{ minions['zookeeper-server']|join(',') }}</value>
    {% elif   minions['hbase-master'] -%}
    <value>{{ minions['hbase-master'][0] }}</value>
    {% else -%}
    <value>localhost</value>
    {% endif -%}
  </property>
</configuration>
